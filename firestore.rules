
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Allow anyone to register/update their own user profile
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && (request.auth.uid == userId || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
    }
    
    // Chat Access
    match /chats/{chatId} {
      allow read: if request.auth != null && (request.auth.uid in resource.data.participants || get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin');
      
      // Allow creating chats for approved users/admins
      allow create: if request.auth != null && (
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true || 
        get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
      );

      // Allow updating for messages and typing status
      allow update: if request.auth != null && (
        ( get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin' ) &&
        // Allow updates only to lastMessage, lastTimestamp, and typingUsers fields
        request.resource.data.keys().hasOnly(['lastMessage', 'lastTimestamp', 'typingUsers', 'participants', 'participantNames', 'isGroup', 'name', 'createdBy'])
      );
      
      match /messages/{msgId} {
        allow read: if request.auth != null;
        allow create: if request.auth != null && (
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isApproved == true || 
          get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
        );
      }
    }

    match /posts/{postId} {
      allow read: if request.auth != null;
      // Allow create/update for admin, but add delete for admin as well
      allow create, update, delete: if request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
    }

    match /tutorProfiles/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // ** NEW RULES FOR CLOUD LIBRARY **
    match /generatedPapers/{paperId} {
        // Allow read only if the user is an admin and the paper's userId matches their uid.
        allow read: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                    && resource.data.userId == request.auth.uid;

        // Allow create only if the user is an admin and the new paper's userId is their own uid.
        allow create: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                    && request.resource.data.userId == request.auth.uid;

        // Allow delete only if the user is an admin and the paper belongs to them.
        allow delete: if request.auth != null 
                    && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin'
                    && resource.data.userId == request.auth.uid;
    }
  }
}
